{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/constants/*": ["constants/*"],
      "~/i18n/*": ["i18n/*"],
      "~/pages/*": ["pages/*"],
      "~/public/*": ["public/*"],
      "~/styles/*": ["styles/*"],
      "~/translate/*": ["translate/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "translate/download.js",
    "plugins/i18next.js",
    "translate/constants.js",
    "translate/index.js",
    "translate/upload.js",
    "plugins/i18next.js"
  ],
  "exclude": ["node_modules"]
}
